---
import Section from "./Section.astro";
import { work } from "@cv";
---

<Section>
  <h2>Experiencia</h2>
  <div class="rowg">
    {
      work.map(({ name, position, startDate, endDate, summary }) => {
        return (
          <div class="card">
            <header class="rowf">
              <>
                <h3>{name}</h3>
                <span class="position">{position}</span>
              </>
            </header>
            <main>
              <p>{summary}</p>
            </main>
            <footer class="rowf">
              <p>{startDate}</p>
              <p>{endDate}</p>
            </footer>
          </div>
        );
      })
    }
  </div>
</Section>

<style>
  h2{
    margin-bottom: 1em;
  }
  .rowg{
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1em;
  }
  .rowf{
    display: flex;
    align-items: center;
    justify-content: space-between;
  }
  .card {
    padding: 1em 2em;
    border-left: 4px solid #4444;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }
  .card main {
    padding: 1em;
    & p {
      color: #555;
      text-align: center;
    }
  }
  span.position {
      font-size: smaller;
      border: 1px solid #444;
      color: #444;
      padding: .4em 1em;
      border-radius: 4em;
    }
</style>
